% add a bookmark
\newcommand{\addbookmark}[2]{
    \cleardoublepage
    \pdfbookmark[chapter]{#1}{#2}
}

% add chapter to Contents and bookmarks
\newcommand{\addcontent}[1]{
    \cleardoublepage
    \phantomsection
    \addcontentsline{toc}{chapter}{#1}
}

% create a chapter and add to bookmarls
\newcommand{\phantomchapter}[2]{
    \addbookmark{#1}{#2}
    \chapter*{#1}
}


